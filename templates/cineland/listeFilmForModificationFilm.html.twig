{% extends "cineland/layoutGeneral.html.twig" %}
{% block titre %}
    Modifier un film
{% endblock %}
{% block contenu %}



    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Modifier un film</h4>
                <form action="modifierFilmV2" class="form-horizontal style-form" method="POST">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Film</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="id" name="id">
                                <option selected="true" disabled>Choisir un film</option>
                                {% for film in films %}
                                    <option value="{{ film.id }}" >{{ film.titre }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-theme" value="Modifier">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- col-lg-12-->
    </div>


{% endblock %}
