{% extends "cineland/layoutGeneral.html.twig" %}

{% block titre %}
    {{ parent()}} La liste des genres dans lesquels un acteur a jou√© au moins un film
{% endblock %}

{% block contenu %}
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover" id="dynamictable">
                <thead>
                <tr>
                    <th> #ID</th>
                    <th> NOM ET PRENOM</th>
                    <th> DATE NAISSANCE</th>
                    <th> NATIONALITE</th>
                    <th> GENRES DES FILMS</th>

                </tr>
                </thead>
                <tbody>

                {% for acteur in acteurs%}
                    <tr>

                        <td >{{acteur.acteur.id}}</td>
                        <td>{{acteur.acteur.nomPrenom}}</td>
                        <td> {{acteur.acteur.dateNaissance|date('d-m-Y')}} </td>
                        <td>{{acteur.acteur.nationalite}}</td>
                        <td>
                            <select multiple class="form-control">

                                {% for nomGenre in acteur.nomGenre%}

                                    <option>{{nomGenre}}</option>

                                {% endfor %}
                            </select>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}