{% extends "cineland/layoutGeneral.html.twig" %}

{% block titre %}
    {{ parent()}} La durée en minutes de tous les films joués par un acteur
{% endblock %}

{% block contenu %}
    {% for acteur in acteur%}
    <div class="form">
        <form class="cmxform form-horizontal tasi-form" id="" name=""  >

            <div class="form-group ">
                <label for="ID" class="control-label col-lg-3">ID</label>
                <div class="col-lg-6">
                    <input class=" form-control" value="{{acteur.id}}" id="" name="" type="number" readonly="readonly" />
                </div>
            </div>
            <div class="form-group ">
                <label for="TITRE" class="control-label col-lg-3">Nom et Prénom</label>
                <div class="col-lg-6">
                    <input class=" form-control" value="{{acteur.nomPrenom}}" id="" name="" type="text" readonly="readonly" />
                </div>
            </div>
            <div class="form-group ">
                <label for="TITRE" class="control-label col-lg-3">Date naissance</label>
                <div class="col-lg-6">
                    <input class=" form-control" value="{{acteur.dateNaissance|date('d-m-Y')}}" id="" name="" type="text" readonly="readonly" />
                </div>
            </div>
            <div class="form-group ">
                <label for="TITRE" class="control-label col-lg-3">Nationalité</label>
                <div class="col-lg-6">
                    <input class=" form-control" value="{{acteur.nationalite}}" id="" name="" type="text" readonly="readonly" />
                </div>
            </div>
            <div class="form-group ">
                <label for="TITRE" class="control-label col-lg-3">La durée en minutes de tous les films joués</label>
                <div class="col-lg-6">
                    <input class=" form-control" value="{{acteur.sumDuree}}" id="" name="" type="number" readonly="readonly" />
                </div>
            </div>
        </form>
        <center>
        <a href="{{ path('action19') }}" ><button class="btn btn-primary">Retour au filtre</button></a>
        </center>
    </div>
    {% endfor %}

{% endblock %}