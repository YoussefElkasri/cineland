{% extends "cineland/layoutGeneral.html.twig" %}

{% block titre %}
    {{ parent()}} Les d√©tails de {{acteur.nomPrenom}}
{% endblock %}

{% block contenu %}
    <div class="col-md-12">
        <div class="content-panel">
            <form class="cmxform form-horizontal tasi-form" id="" name=""  >

                <div class="form-group ">
                    <label for="ID" class="control-label col-lg-3">ID</label>
                    <div class="col-lg-6">
                        <input class=" form-control" value="{{acteur.id}}" id="" name="" type="number" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group ">
                    <label for="TITRE" class="control-label col-lg-3">NOM ET PRENOM</label>
                    <div class="col-lg-6">
                        <input class=" form-control" value="{{acteur.nomPrenom}}" id="" name="" type="text" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group ">
                    <label for="TITRE" class="control-label col-lg-3">DATE NAISSANCE</label>
                    <div class="col-lg-6">
                        <input class=" form-control" value="{{acteur.dateNaissance|date('d-m-Y')}}" id="" name="" type="text" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group ">
                    <label for="TITRE" class="control-label col-lg-3">NATIONALITE</label>
                    <div class="col-lg-6">
                        <input class=" form-control" value="{{acteur.nationalite}}" id="" name="" type="text" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group ">
                    <label for="TITRE" class="control-label col-lg-3">FILMS</label>
                    <div class="col-lg-6">
                        <select multiple class="form-control">
                            {% for film in acteur.film%}
                                <option>{{film.titre}}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </form>

        </div>
        <p></p>
        <a href="{{ path('liste_acteur_for_details') }}" ><button class="btn btn-primary">Retour au filtre</button></a>
    </div>

{% endblock %}