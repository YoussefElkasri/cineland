{% extends "cineland/layoutGeneral.html.twig" %}
{% block titre %}
    Augmenter l’âge minimal de tous les films dans lesquels à jouer un acteur donné
{% endblock %}
{% block contenu %}


        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Si vous ne remplissez pas le champs du valeur, elle sera augmenter par 1</h4>
                <form action="" class="form-horizontal style-form" method="get">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Acteur</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="id" name="id">
                                <option selected="true" disabled>Choisir un acteur</option>
                                {% for acteur in acteurs %}
                                    <option value="{{ acteur.id }}" >{{ acteur.nomPrenom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="id" class="col-sm-2 col-sm-2 control-label">
                            La valeur à ajouter</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="id" type="number" name="value26" min="0">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-theme" value="Valider">
                        </div>
                    </div>
                </form>
            </div>
        </div>



{% endblock %}
