{% extends "cineland/layoutGeneral.html.twig" %}

{% block titre %}
    {{ parent()}} Liste des acteurs
{% endblock %}

{% block contenu %}
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover" id="dynamictable">
                <thead>
                <tr>
                    <th> #ID</th>
                    <th> Nom et Prenom</th>
                    <th> Date naissance</th>
                    <th> Nationalite</th>
                    <th> Films</th>

                </tr>
                </thead>
                <tbody>

                {% for acteur in acteurs%}
                    <tr>

                        <td >{{acteur.id}}</td>
                        <td>{{acteur.nomPrenom}}</td>
                        <td>{{acteur.DateNaissance|date('d-m-Y')}}</td>
                        <td>{{acteur.nationalite}}</td>
                        <td>
                            <select multiple class="form-control">
                                {% for film in acteur.film%}
                                    <option>{{film.titre}}</option>
                                {% endfor %}
                            </select>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <p></p>
        <a href="{{ path('action15') }}" ><button class="btn btn-primary">Retour au filtre</button></a>
    </div>

{% endblock %}