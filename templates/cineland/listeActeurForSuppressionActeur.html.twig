{% extends "cineland/layoutGeneral.html.twig" %}
{% block titre %}
    Supprimer un acteur
{% endblock %}
{% block contenu %}


    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Supprimer un acteur</h4>
                <form action="{{ path('Supprimer_acteur') }}" class="form-horizontal style-form" method="POST">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Acteur</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ID" name="ID">
                                <option selected="true" disabled>Choisir un acteur</option>
                                {% for acteur in acteurs %}
                                    <option value="{{ acteur.id }}" >{{ acteur.nomPrenom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-theme" value="Supprimer">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}
