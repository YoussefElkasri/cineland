{% extends "cineland/layoutGeneral.html.twig" %}
{% block titre %}
    La durée moyenne de tous les films d’un genre donné
{% endblock %}
{% block contenu %}



    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Choisir un genre</h4>
                <form action="{{ path('action22_Suite') }}" class="form-horizontal style-form" method="POST">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Genre</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="id" name="id">
                                <option selected="true" disabled>Choisir un genre</option>
                                {% for genre in genres %}
                                    <option value="{{ genre.id }}" >{{ genre.nom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-theme" value="Valider">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- col-lg-12-->
    </div>


{% endblock %}
