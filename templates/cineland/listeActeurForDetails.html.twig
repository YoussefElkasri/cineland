{% extends "cineland/layoutGeneral.html.twig" %}
{% block titre %}
    Les détails d'un acteur
{% endblock %}
{% block contenu %}

    <center><h4>Choisissez la méthode qui vous plait pour afficher les détails d'un acteur !</h4></center>
    <div class="col-md-6">
        <center><h5 ><span style="color: #00a6b2">Méthode 1</span></h5></center>
    </div>
    <div class="col-md-6">
        <center> <h5 ><span style="color: #00a6b2">Méthode 2</span></h5></center>
    </div>

    <div class="col-md-6">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover" id="dynamictable">
                <thead>
                <tr>
                    <th> #ID</th>
                    <th> NomPrenom</th>
                </tr>
                </thead>
                <tbody>

                {% for acteur in acteurs%}
                    <tr>
                        <td >{{acteur.id}}</td>
                        <td> <a href="{{ path('acteur_DetailsV2', { 'id': acteur.id }) }}"><button>{{acteur.nomPrenom}}</button></a></td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
        <div class="col-lg-6">
            <div class="form-panel">
                <form action="detailActeur" class="form-horizontal style-form" method="POST">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Acteur</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="id" name="id">
                                <option selected="true" disabled>Choisir un acteur</option>
                                {% for acteur in acteurs %}
                                    <option value="{{ acteur.id }}" >{{ acteur.nomPrenom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-theme" value="Valider">
                        </div>
                    </div>
                </form>
            </div>
        </div>




{% endblock %}
